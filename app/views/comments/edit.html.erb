<section class='edit-comment'>
  <h1>Modifier un commentaire</h1>

  <div class='row'>
    <div class='col-sm-6'>
      <%= form_for :comment, url: idea_comment_path(@idea, @comment), method: :patch do |f| %>
        <%= render 'layouts/errors', object: @comment %>
        <div class='form-group'>
          <%= f.text_area :body, required: true, class: 'form-control', rows: 10 %>
        </div>

        <div class='form-group'>
          <%= f.button 'Modifier commentaire', class: 'btn btn-default' %>
        </div>

      <% end %>
    </div>
  </div>
</section>