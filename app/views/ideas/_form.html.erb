<%= form_for @idea do |f| %>

  <%= render 'layouts/errors', object: @idea %>

  <div class='form-group col-sm-12'>
    <%= f.label :title, 'Titre' %><br>
    <%= f.text_field :title, required: true, class: 'col-sm-12' %><br>
  </div>

  <div class='form-group col-sm-12'>
    <%= f.label :description, 'Description' %><br>
    <%= f.text_area :description, class: 'col-sm-12', rows: 10 %><br>
  </div>

  <div class='actions text-center'>
    <%= f.submit 'OK', class: 'btn btn-default' %>
  </div>
<% end %>